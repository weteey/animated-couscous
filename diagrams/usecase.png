@startuml
left to right direction

!pragma layout smetana

actor "Администратор" as Admin
actor "Преподаватель" as Teacher
actor "Студент" as Student

rectangle "Система" {

  usecase "Добавление и редактирование дисциплин" as UC_Disc
  usecase "Добавление и редактирование аудиторий" as UC_Aud
  usecase "Создание расписания\n(формирование записей занятий)" as UC_Create
  usecase "Изменение записей расписания\n(дата, время, дисциплина,\nаудитория, преподаватель, группа)" as UC_Edit
  usecase "Удаление записей расписания" as UC_Delete
  usecase "Контроль пересечений\nи корректности расписания" as UC_Check

  usecase "Просмотр расписания своих занятий\nна выбранную дату/период" as UC_TeacherView

  usecase "Просмотр расписания своей группы" as UC_StudGroup
  usecase "Просмотр расписания по выбранной дате" as UC_StudDate
  usecase "Просмотр расписания по преподавателю" as UC_StudTeacher
}

Admin --> UC_Disc
Admin --> UC_Aud
Admin --> UC_Create
Admin --> UC_Edit
Admin --> UC_Delete
Admin --> UC_Check

Teacher --> UC_TeacherView

Student --> UC_StudGroup
Student --> UC_StudDate
Student --> UC_StudTeacher

@enduml
